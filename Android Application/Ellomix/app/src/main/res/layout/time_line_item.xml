<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/user_info_band"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/user_post_band"
        android:padding="10dp">

        <com.ellomix.android.ellomix.Actor
            android:id="@+id/uploader_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="user"
            android:text="user"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/uploader_name" />

        <com.ellomix.android.ellomix.OpenSansRegular
            android:id="@+id/long_ago_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignEnd="@id/uploader_text_view"
            android:layout_alignRight="@id/uploader_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/time_uploaded" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/track_artwork_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_info_band"
        android:background="@color/colorWhite"/>
    
    <com.ellomix.android.ellomix.Actor
        android:id="@+id/artist_text_view"
        android:text="artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_artwork_image_view"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="@dimen/artist_name" />
    
    <com.ellomix.android.ellomix.Actor
        android:id="@+id/song_title_text_view"
        android:text="track title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_text_view"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/song_title_text" />

    <com.ellomix.android.ellomix.Actor
        android:id="@+id/message_text_view"
        android:text="thingy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_title_text_view"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/comment"
        android:id="@+id/comment"
        android:layout_alignTop="@+id/like"
        android:layout_toRightOf="@+id/like"
        android:layout_toEndOf="@+id/like"
        android:background="@drawable/comment" />

    <Space
        android:layout_width="15px"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/artist_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space_left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/favorite"
        android:id="@+id/like"
        android:background="@drawable/favorite"
        android:layout_alignBottom="@+id/artist_text_view"
        android:layout_toRightOf="@+id/space_left"
        android:layout_toEndOf="@+id/space_left" />

</RelativeLayout>